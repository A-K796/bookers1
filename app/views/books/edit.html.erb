<div class="container">
	<div class="row">
		<hi><strong>Editing Book</strong></hi>
        <%= form_for (@book) do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Body</p>
        <%= f.text_area :body %>
        <%= f.submit "Update Book" %>
        <% end %>
        <div class='btn-toolbar'>
        	<div class="btn-group">
        		<%= link_to "Show", book_path(@book.id) %>
        	</div>
        	<div class="btn-group">
        		<%= link_to "Back", books_path %>
        	</div>
        </div>
    </div>
</div>